<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Widget.MaterialComponents.BottomNavigationView
         Container color                  : ?attr/colorSurface
         Icon/Text label color (inactive) : ?attr/colorOnSurface at 60%
         Icon/Text label color (active)   : ?attr/colorPrimary -->


    <!-- Widget.MaterialComponents.BottomNavigationView.Colored
         Container color                  : ?attr/colorPrimary
         Icon/Text label color (inactive) : ?attr/colorOnPrimary at 60%
         Icon/Text label color (active)   : ?attr/colorOnPrimary -->


    <!-- Widget.MaterialComponents.BottomNavigationView.PrimarySurface (night)
         Container color                  : ?attr/colorSurface
         Icon/Text label color (inactive) : ?attr/colorOnSurface at 60%
         Icon/Text label color (active)   : ?attr/colorPrimary -->

    <!-- Attributes
         elevation                  : 8dp
         itemRippleColor            : ?attr/colorOnSurface at 8%
         labelVisibilityMode        : auto (labeled, selected, unselected)
         itemIconSize               : 24dp
         itemTextAppearanceInactive : ?attr/textAppearanceCaption
         itemTextAppearanceActive   : ?attr/textAppearanceCaption -->

    <style name="MyNavigationBottomView" parent="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>